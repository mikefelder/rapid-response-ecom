{
  "name": "rapid-response-shopper",
  "version": "1.0.0",
  "description": "High-demand product inventory monitoring solution",
  "private": true,
  "workspaces": [
    "src/shared",
    "src/api",
    "src/workers",
    "src/web"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:workers\" \"npm run dev:web\"",
    "dev:api": "npm run dev -w src/api",
    "dev:workers": "npm run dev -w src/workers",
    "dev:web": "npm run dev -w src/web",
    "test": "npm run test --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "deploy:infra": "az deployment sub create --location eastus --template-file infra/main.bicep --parameters infra/main.bicepparam",
    "deploy:functions": "npm run deploy -w src/api && npm run deploy -w src/workers"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
